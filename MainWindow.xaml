<Window x:Class="BB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="MainWindow"
        Height="350" Width="525">

    <Grid>
        <wpf:ChromiumWebBrowser
            x:Name="Browser"
            Address="https://google.com"/>
        <TextBox x:Name="SearchBox" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,0,52,0" Height="25" TextAlignment="Left" VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged" HorizontalScrollBarVisibility="Disabled"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Right" Margin="473,0,0,0" VerticalAlignment="Top" Height="25" Click="Button_Click" Width="52"/>
    </Grid>
</Window>
